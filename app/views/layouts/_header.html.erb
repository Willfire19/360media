          <% else %>
            <li>
              <p class="navbar-btn"> 
                <%= link_to "Sign In", new_user_session_path, :class => "btn btn-default btn-primary navbar-spacing" %>
              </p>
            </li>
          <% end %>

        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
