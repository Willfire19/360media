<h1>Listing pictures</h1>

<div class="row">
  <div class="col-xs-12">

    <div class="row">

      <% @pictures.each do |picture| %>

        <div class="col-xs-12 col-sm-6 col-md-4">
          
          <%= render "pictures/picture_item", :picture => picture %>

        </div>

      <% end %>

    </div>

  </div>
</div>
