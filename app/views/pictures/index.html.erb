<h1>Listing pictures</h1>

<div class="row">
  <div class="col-xs-12">

    <div class="row">

      <% @pictures.each do |picture| %>

        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="panel  panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title"><%= link_to picture.name, picture %></h3>
            </div>
            <div class="panel-body">

              <% if picture.photosphere? %>

                <div class="row">
                  <div class="col-xs-12">
                    <%= image_tag picture.photosphere_url(:thumb).to_s, class: "img-responsive" %>
                    <!-- <div style="height:150px; width: 300px; text-align: center;">
                      <%= image_tag picture.photosphere_url.to_s, class: "img-responsive" %>
                    </div> -->
                  </div>
                </div>

              <% end %>

              <% if current_user == picture.user %>             
                <div class="row" style="margin-top: 5px;">
                  <div class="col-xs-12">
                    <%= link_to edit_picture_path(picture), class: "btn btn-primary" do %>
                      <i class="fa fa-pencil-square-o"></i> Edit
                    <% end %>
                    <%= link_to picture, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
                      <i class="fa fa-trash-o"></i> Delete
                    <% end %>
                  </div>
                </div>
              <% end %>

            </div>
          </div>

        </div>

      <% end %>

    </div>

  </div>
</div>

