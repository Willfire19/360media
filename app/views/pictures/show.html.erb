<% if @picture.photosphere? %>
		<div class="vr_pict">
			<!-- <div id="example" data-url="<%= @picture.photosphere_url.to_s %>"></div> -->
			<%= content_tag "div", id: "vr_viewer", style: "height: 500px; width: auto;", data: {url: @picture.photosphere_url.to_s} do %>
			<% end %>
		</div>

	<%= render 'layouts/graphics' %>
<% end %>

<div class="row">
	<div class="col-xs-12 col-sm-10 col-sm-offset-1">

		<div class="row">
			<div class="col-xs-12">
				<h3><%= @picture.name %></h3>
			</div>
			<% if current_user == @picture.user %>
				<div class="col-xs-12">
					<%= link_to edit_picture_path(@picture), class: "btn btn-primary" do %>
						<i class="fa fa-pencil-square-o"></i> Edit
					<% end %>
          <%= link_to @picture, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
          	<i class="fa fa-trash-o"></i> Delete
          <% end %>				
				</div>
			<% end %>
		</div>

	</div>
</div>




